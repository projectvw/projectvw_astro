---
// Import necessary components
import FormContainer from '~/components/ui/Form.astro';
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { Contact as Props } from '~/types';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  inputs,
  textarea,
  disclaimer,
  button,
  description,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />

  {
    inputs && (
      <div class="flex flex-col max-w-xl mx-auto rounded-lg backdrop-blur border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900 shadow p-4 sm:p-6 lg:p-8 w-full">
        <!-- Form Container -->
        <form 
          name="contact" 
          method="POST" 
          data-netlify="true" 
          action="/thank-you" 
          netlify-honeypot="bot-field"
          class="space-y-4"
        >
          <!-- Hidden Field for Netlify -->
          <input type="hidden" name="form-name" value="contact" />
          <div class="hidden">
            <label for="bot-field">Don't fill this out if you're human:</label>
            <input name="bot-field" id="bot-field" />
          </div>

          <!-- Render Inputs Dynamically -->
          {inputs.map((input) => (
            <div>
              <label for={input.name} class="block font-medium">{input.label}</label>
              <input 
                type={input.type || 'text'} 
                name={input.name} 
                id={input.name} 
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                required 
              />
            </div>
          ))}

          <!-- Render Textarea -->
          {textarea && (
            <div>
              <label for="message" class="block font-medium">{textarea.label || 'Message'}</label>
              <textarea 
                name="message" 
                id="message" 
                rows="5"
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                required
              ></textarea>
            </div>
          )}

          <!-- Disclaimer -->
          {disclaimer && (
            <p class="text-sm text-gray-600 mt-4">{disclaimer.label}</p>
          )}

          <!-- Submit Button -->
          <button 
            type="submit" 
            class="w-full bg-indigo-600 text-white py-2 px-4 rounded-md shadow hover:bg-indigo-700 focus:outline-none"
          >
            {button?.label || 'Submit'}
          </button>
        </form>

        <!-- Description -->
        {description && (
          <p class="text-center text-sm mt-4">{description}</p>
        )}
      </div>
    )
  }
</WidgetWrapper>
